<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_columns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:maxWidth="65dp"
        android:maxHeight="65dp"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:paddingBottom="2dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_boy_child" />

    <LinearLayout
        android:id="@+id/patient_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:orientation="vertical">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_child_name"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:text="@string/child_s_name"
            android:textColor="@color/text_black"
            android:textSize="19dp" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_child_age"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:text="@string/age_183"
            android:textColor="@color/text_black"
            android:textSize="19dp" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_address_gender"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:text="@string/male_lavington"
            android:textColor="@color/light_grey_text"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/due_button_wrapper"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/vaccination_earlier_bg"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingEnd="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp">

        <Button
            android:id="@+id/due_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/vaccine_blue_bg_st"
            android:textSize="15dp"
            android:typeface="normal" />

    </LinearLayout>

</RelativeLayout>
